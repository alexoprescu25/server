<div class="container">
    <div class="account-info">
        <div class="profile-picture">
            <% if (user.profilePicture.includes('images')) { %>
                <img src="/<%= user.profilePicture %>" alt="<%= user.email %>">
            <% } else { %>
                <img src="<%= user.profilePicture %>" alt="<%= user.email %>">
            <% } %>
        </div>
        <div class="info">
            <h1><%= user.email %></h1>
            <div class="user-role">
                <p>
                    <span>Role: </span>
                    <% if (user.role === 'admin') { %>
                        <i class="fa-solid fa-star"></i>
                        <span>Administrator</span>
                    <% } else { %>
                        <span>User</span>
                    <% } %>
                </p>
            </div>
        </div>
    </div>
</div>