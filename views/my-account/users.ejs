<div class="container">
    <div class="users">
        <table>
            <thead>
                <tr>
                    <th>User</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <% if (users) { %>
                <tbody>
                    <% for (const user of users) { %>
                        <tr>
                            <td class="profile-picture">
                                <% if (user.profilePicture.includes('images')) { %>
                                    <img src="/<%= user.profilePicture %>" alt="<%= user.email %>">
                                <% } else { %>
                                    <img src="<%= user.profilePicture %>" alt="<%= user.email %>">
                                <% } %>
                            </td>
                            <td class="email">
                                <a href="mailto:<%= user.email %>"><%= user.email %></a>
                            </td>
                            <td class="role">
                                <% if (user.role) { %>
                                    <p>
                                        <span>Role: </span>
                                        <% if (user.role === 'admin') { %>
                                            <i class="fa-solid fa-star"></i>
                                            <span>Administrator</span>
                                        <% } else { %>
                                            <span>User</span>
                                        <% } %>
                                    </p>
                                <% } %>
                            </td>
                            <td class="actions">
                                <button>
                                    <i class="fa-solid fa-trash"></i>
                                </button>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            <% } %>
        </table>
    </div>
</div>